<h1>Listing courses</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Video</th>
      <th>Video file name</th>
      <th>Video content type</th>
      <th>Video file size</th>
      <th>Image</th>
      <th>Syllabus</th>
      <th>Language</th>
      <th>Hours</th>
      <th>Prerequisites</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Teacher</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.title %></td>
        <td><%= course.description %></td>
        <td><%= course.video %></td>
        <td><%= course.video_file_name %></td>
        <td><%= course.video_content_type %></td>
        <td><%= course.video_file_size %></td>
        <td><%= course.image %></td>
        <td><%= course.syllabus %></td>
        <td><%= course.language %></td>
        <td><%= course.hours %></td>
        <td><%= course.prerequisites %></td>
        <td><%= course.start_date %></td>
        <td><%= course.end_date %></td>
        <td><%= course.teacher_id %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

